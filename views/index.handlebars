<div class="container">
	<h2 id="title"> Burgers</h2>
	<div class="row">
		<div class="col-sm-4">
			<ul class="list-group eaten">
				{{#each data}}
				{{#if this.devoured}}
					<li class="list-group-item">
						<form action = "/delete/{{this.burger_name}}" method="post">
							<button class = "eaten" type = "submit">Delete {{this.burger_name}}
						</form>
					</li>
					{{/if}}
					{{/each}}
			</ul>
		</div>

<div class="col-sm-4">
	<ul class="list-group not-eaten">
		{{#each data}}
		{{#if this.devoured}}
			{{else}}
				<li class="list-group-item">
					<form action="/eat/{{this.burger_name}}" method="post">
						<button class="not-eaten" type="submit">Eat {{this.burger_name}}
						</button>
					</form>
				</li>
				{{/if}}
					{{/each}}
	</ul>
</div>
	<div class="col-sm-4">
		<ul class="list-group add">
			<li class="list-group-item">
				<form action="/add" method="post">
					<input name="burgertoadd" placeholder="">
					</input>
					<button class="add" type="submit">
						Add a burger
					</button>
				</form>
			</li>
		</ul>
	</div>
  </div>
</div>